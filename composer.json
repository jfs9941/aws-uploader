{
  "name": "fjs/uploader",
  "description": "A comprehensive Laravel file upload package with support for pre-signed URLs, chunked uploads, video processing (HLS encoding, thumbnails), image processing (watermarking, blur, compression), and multiple storage drivers (S3, Local). Features include state machine management, async job processing, and secure obfuscated code distribution.",
  "type": "library",
  "keywords": [
    "laravel",
    "upload",
    "file-upload",
    "s3",
    "presigned-url",
    "chunked-upload",
    "video-processing",
    "hls",
    "video-encoding",
    "image-processing",
    "thumbnail",
    "watermark",
    "blur",
    "compression",
    "multipart-upload",
    "file-storage",
    "flysystem",
    "aws-s3",
    "state-machine",
    "async-jobs"
  ],
  "homepage": "https://github.com/fjs/uploader",
  "license": "MIT",
  "authors": [
    {
      "name": "FJS Team",
      "email": "dev@fjs.com",
      "homepage": "https://github.com/fjs",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/fjs/uploader/issues",
    "source": "https://github.com/fjs/uploader",
    "docs": "https://github.com/fjs/uploader/wiki"
  },
  "require": {
    "php": ">=7.3",
    "laravel/framework": "^12.0",
    "webmozart/assert": "^1.12",
    "league/flysystem-aws-s3-v3": "*",
    "ext-json": "*",
    "ext-zip": "*"
  },
  "autoload": {
    "psr-4": {
      "Jfs\\": "src/"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.90"
  },
  "scripts": {
    "fix": "php-cs-fixer fix --allow-risky=yes",
    "pre-autoload-dump": [
      "@php scripts/extract-code.php"
    ],
    "post-install-cmd": [
      "@php scripts/extract-code.php"
    ],
    "post-update-cmd": [
      "@php scripts/extract-code.php"
    ]
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
